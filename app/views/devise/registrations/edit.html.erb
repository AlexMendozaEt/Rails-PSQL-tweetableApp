<h2 class= "home_text">Edit Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="text_filds">
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :username, class: "text_labels_filds" %><br />
      <%= f.text_field :username, autocomplete: "off", class: "inputs_filds" %>
    </div>

    <div class="field">
      <%= f.label :email, class: "text_labels_filds"  %><br />
      <%= f.email_field :email, autocomplete: "off", class: "inputs_filds"  %>
    </div>

    <div class="field">
      <%= f.label :name, class: "text_labels_filds"  %><br />
      <%= f.text_field :name, autocomplete: "off", class: "inputs_filds"   %>
    </div>

    <div>
      <%= f.label :avatar, style: "display: block", class: "text_labels_filds"  %>
      <%= image_tag resource.avatar, class: "avatar"%>
      <%= f.file_field :avatar, class: "avatar_filds" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class: "text_labels_filds"  %> <br />
      <%= f.password_field :password, autocomplete: "new-password", class: "inputs_filds"  %>
      <% if @minimum_password_length %>
        <br />
        <em class="text_labels_filds" ><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "text_labels_filds"  %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "inputs_filds"  %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: "text_labels_filds"  %> <br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "inputs_filds"  %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "buttom_regis"%>
    </div>
    
    <div class="back_button" >
      <%= link_to "Back", :back%>
    <div>
  </div>
<% end %>



